<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".record.contribution_summary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back"

                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adding Data"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/pbold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <!--TODO: Type of Plastic-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUMMARY"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/pbold"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER INFORMATION"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/pregular"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of User:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barangay:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvBarangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Address:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTRIBUTION INFORMATION"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/pregular"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contribution ID:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Plastic:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvPlastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Brand:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilo:"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp" />
            <TextView
                android:id="@+id/tvKilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Loading]"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pregular"
                android:layout_marginHorizontal="15dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate data into QR Code"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>