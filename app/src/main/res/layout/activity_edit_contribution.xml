<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".record.edit_contribution">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back"

                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Record"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/pbold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <!--TODO: Type of Plastic-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanned Result"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <ImageView
                android:id="@+id/ivQR"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:background="@color/grey"
                android:layout_margin="15dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Plastic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_layout"
                android:padding="2dp"
                android:layout_marginHorizontal="15dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/sPlastic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="10dp"
                    android:textSize="17dp"
                    android:hint="Type of Plastic"
                    android:gravity="left"
                    android:textColorHint="@color/grey"
                    app:ms_hint="Type of User "
                    app:ms_hint_color="@color/grey"
                    app:ms_arrow_tint="@color/black"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Brand"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_layout"
                android:padding="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/sBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="10dp"
                    android:textSize="17dp"
                    android:hint="Type of Brand"
                    android:gravity="left"
                    android:textColorHint="@color/grey"
                    app:ms_hint="Type of User "
                    app:ms_hint_color="@color/grey"
                    app:ms_arrow_tint="@color/black"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Kilo of Plastics"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/etKilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kilo"
                android:textColorHint="@color/grey"
                android:padding="15dp"
                android:background="@drawable/edit_text_layout"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"/>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Record"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>