<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".record.generated_qr">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/close"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!--TODO: Type of Plastic-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screenshot the QR-Code"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successfully Generated!"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>


            <ImageView
                android:id="@+id/ivQR"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:background="@color/grey"
                android:layout_margin="15dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for recycling!"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/pregular"

                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/edit"
                app:iconTint="@color/white"
                android:text="View Records"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:textAlignment="center"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="100dp"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>