<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".authentication.sign_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/recycle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dayon Igsoun!"
                android:fontFamily="@font/pbold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_layout"
                android:padding="2dp"
                android:layout_marginHorizontal="25dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/sType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="10dp"
                    android:textSize="17dp"
                    android:hint="Type of User"
                    android:gravity="left"
                    android:textColorHint="@color/grey"
                    app:ms_hint="Type of User "
                    app:ms_hint_color="@color/grey"
                    app:ms_arrow_tint="@color/black"
                    android:textColor="@color/green" />
            </LinearLayout>

            <EditText
                android:id="@+id/etFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fullname"
                android:textColorHint="@color/grey"
                android:padding="15dp"
                android:visibility="gone"
                android:background="@drawable/edit_text_layout"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_layout"
                android:padding="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/sBarangay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="10dp"
                    android:textSize="17dp"
                    android:hint="Barangay"
                    android:gravity="left"
                    android:textColorHint="@color/grey"
                    app:ms_hint="Barangay "
                    app:ms_hint_color="@color/grey"
                    app:ms_arrow_tint="@color/black"
                    android:textColor="@color/green" />
            </LinearLayout>



            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Complete Address"
                android:textColorHint="@color/grey"
                android:padding="15dp"
                android:background="@drawable/edit_text_layout"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_layout"
                    android:padding="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp">
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/sGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_padding_left="10dp"
                        android:textSize="17dp"
                        android:hint="Gender"
                        android:gravity="left"
                        android:textColorHint="@color/grey"
                        app:ms_hint="Type of User: "
                        app:ms_hint_color="@color/grey"
                        app:ms_arrow_tint="@color/black"
                        android:textColor="@color/black" />
                </LinearLayout>
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/grey"
                    android:padding="15dp"
                    android:background="@drawable/edit_text_layout"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:fontFamily="@font/pregular"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:fontFamily="@font/pregular"
                    android:textColor="@color/green"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>