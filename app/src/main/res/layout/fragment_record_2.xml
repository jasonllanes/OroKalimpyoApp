<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".record.record_fragment_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adding Data"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/pbold"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <!--TODO: Type of Plastic-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload image of the plastic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTE: Take a clear picture of the plastics that you have."
                android:textColor="@color/green"
                android:textSize="12sp"
                android:fontFamily="@font/pbolditalic"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPlastic"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:background="@color/grey"
                android:layout_margin="15dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/green"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/upload"
                app:iconTint="@color/white"
                android:text="Upload"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/camera"
                app:iconTint="@color/white"
                android:text="Camera"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="100dp"/>










            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate data into QR Code"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>


    </ScrollView>

</FrameLayout>