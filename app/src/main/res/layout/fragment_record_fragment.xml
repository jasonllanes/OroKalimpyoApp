<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".record.record_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adding Data"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/pbold"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <!--TODO: Type of Plastic-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Plastic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_layout"
                android:padding="2dp"
                android:layout_marginHorizontal="15dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="10dp"
                    android:textSize="17dp"
                    android:hint="Type of Plastic"
                    android:gravity="left"
                    android:textColorHint="@color/grey"
                    app:ms_hint="Type of User "
                    app:ms_hint_color="@color/grey"
                    app:ms_arrow_tint="@color/black"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don\'t know what type of plastic? Try using our image classifier:"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:fontFamily="@font/pbolditalic"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScanPlastic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/scan"
                app:iconTint="@color/white"
                android:text="Identify"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Brand"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_layout"
                android:padding="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/sBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="10dp"
                    android:textSize="17dp"
                    android:hint="Type of Brand"
                    android:gravity="left"
                    android:textColorHint="@color/grey"
                    app:ms_hint="Type of User "
                    app:ms_hint_color="@color/grey"
                    app:ms_arrow_tint="@color/black"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don\'t know what the brand is? Try using our image classifier:"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:fontFamily="@font/pbolditalic"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScanBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/scan"
                app:iconTint="@color/white"
                android:text="Identify"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Kilo of Plastics"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don\'t have a weighing scale? \nJust let the collector handle it during collection:"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:fontFamily="@font/pbolditalic"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kilo"
                android:textColorHint="@color/grey"
                android:padding="15dp"
                android:background="@drawable/edit_text_layout"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"/>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:fontFamily="@font/pmedium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="15dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>


    </ScrollView>

</FrameLayout>